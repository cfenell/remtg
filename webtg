#!/bin/sh
rtdir=
null=">/dev/null"
if [ -z "$matlab" ]; then
 matlab=matlab
fi
#find remtg directory
filename=$0
while [ -h $filename ]; do
        lscmd=`ls -l $filename 2>/dev/null`
        f1=`echo "$lscmd" | awk '{ print $NF }'`
        fp=`echo "$f1" | awk '{ print index($1,"/") }'`
        if [ $fp != "1" ];then
                filename=`dirname $filename`/$f1
        else
                filename=$f1
        fi
done
MATLABPATH=`dirname $filename`
#echo $MATLABPATH
TMP=$HOME/tmp
if [ ! -d $TMP ];then
 mkdir $TMP
fi
ndumps="60"
usage="Usage: webtg [-o] [-O] [-v] [-d dir] [-s KSTVL2PZ] [-n dumps/secs] [start] | stop"
while getopts oOvd:s:n: flag
do
 case $flag in
  v) null=;;
  d) rtdir="$OPTARG";;
  s) EISCATSITE="$OPTARG"
     export EISCATSITE;;
  n) ndumps="$OPTARG";;
  o) matlab="octave-cli"
     TMPDIR=$TMP
     OCTAVE_PATH=$MATLABPATH
     export OCTAVE_PATH TMPDIR;;
  O) matlab="octave";;
  ?) echo $usage
     exit 2;;
 esac
done
shift `expr $OPTIND - 1`
if [ "$*" = "stop" ];then
 /bin/ps -u kstdev -u eiscat | awk '/webtg/ && ! /awk/ {print "ps  -fu kstdev -u eiscat | grep " $1 " | grep $matlab"}' | /bin/sh | awk '{print $2}' | xargs kill -9 >/dev/null
elif [ "$*" = "start" ] || [ "$*" = "" ];then
 SHELL=/bin/sh

 WTG="rtdir='$rtdir',webtg=$ndumps"
 export MATLABPATH SHELL TMP WTG
 unset DISPLAY
 if [ -z "$OCTAVE_PATH" ];then
  $matlab -nodisplay -r wtg $null </dev/null
 elif [ $matlab == "octave" ]; then
  $matlab -q -p $OCTAVE_PATH --eval wtg
 else
  $matlab -Wq --eval wtg
 fi
else
 echo $usage
 exit 1
fi
